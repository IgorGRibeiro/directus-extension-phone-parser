{
  "name": "@ribertec/directus-extension-phone-parser",
  "description": "Parse and validate international phone numbers in Directus Flows using libphonenumber-js",
  "icon": "phone",
  "version": "1.2.0",
  "license": "MIT",
  "author": "@ribertec",
  "repository": {
    "type": "git",
    "url": "https://github.com/IgorGRibeiro/directus-extension-phone-parser"
  },
  "keywords": [
    "directus",
    "directus-extension",
    "directus-extension-operation",
    "phone",
    "phone-number",
    "phone-parser",
    "validation",
    "libphonenumber",
    "international"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "directus:extension": {
    "type": "operation",
    "path": {
      "app": "dist/app.js",
      "api": "dist/api.js"
    },
    "source": {
      "app": "src/app.js",
      "api": "src/api.js"
    },
    "host": "^10.0.0 || ^11.0.0",
    "sandbox": {
      "enabled": true,
      "requestedScopes": {
        "log": {}
      }
    }
  },
  "scripts": {
    "build": "directus-extension build",
    "dev": "directus-extension build -w --no-minify",
    "link": "directus-extension link",
    "validate": "directus-extension validate",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@directus/extensions-sdk": "17.0.9",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "semantic-release": "^25.0.3",
    "vitest": "^4.0.18",
    "vue": "^3.5.28"
  },
  "dependencies": {
    "libphonenumber-js": "^1.12.37"
  }
}
